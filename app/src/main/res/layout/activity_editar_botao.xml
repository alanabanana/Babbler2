<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3">

        <TextView
            android:id="@+id/textEditar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:gravity="bottom|center_horizontal"
            android:text="Editar Botões:"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="57dp"
            android:layout_height="61dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/botao_redondo"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <Button
            android:id="@+id/BotaoNovo"
            android:layout_width="352dp"
            android:layout_height="61dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:drawableLeft="@drawable/ic_add_icon"
            android:gravity="center|left"
            android:onClick="EditarBotaoEmOutraTela"
            android:text="   Criar Novo Botão"
            android:textSize="30dp" />

        <Button
            android:id="@+id/BotaoEditarAudioPadrao"
            android:layout_width="354dp"
            android:layout_height="75dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:drawableLeft="@drawable/ic_add_icon"
            android:gravity="center|left"
            android:text="Editar Botões Existentes"
            android:textSize="30dp" />  />
        <ImageButton
            android:id="@+id/Botão"
            android:layout_width="354dp"
            android:layout_height="75dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:drawableLeft="@drawable/ic_add_icon"
            android:gravity="center|left"
            android:text="Editar Botões Existentes"
            android:textSize="30dp" />
        />

    </GridLayout>

</ScrollView>