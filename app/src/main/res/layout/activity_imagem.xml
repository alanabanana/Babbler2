<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            android:id="@+id/textComida"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:text="Imagens para Comida:"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/chocolateButton"
            android:layout_width="205sp"
            android:layout_height="205sp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/chocolate"
            android:onClick="escolheuChocolate"/>

        <ImageButton
            android:id="@+id/cachorroQuenteButton"
            android:layout_width="205sp"
            android:layout_height="205sp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/cachorroQuente"
            android:onClick="escolheuCachorroQuente"/>

        <ImageButton
            android:id="@+id/HamburguerButton"
            android:layout_width="205sp"
            android:layout_height="205sp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/Hamburger"
            android:onClick="escolheuHamburguer"/>
        <ImageButton
            android:id="@+id/PizzaButton"
            android:layout_width="205sp"
            android:layout_height="205sp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/pizza"
            android:onClick="escolheuPizza"/>
        <ImageButton
            android:id="@+id/batataFritaButton"
            android:layout_width="205sp"
            android:layout_height="205sp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/batataFrita"
            android:onClick="escolheuBatataFrita"/>
    </GridLayout>
</ScrollView>