<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="410dp"
            android:layout_height="144dp"
            android:background="@drawable/quadrado_verde"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:layout_width="43dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/voltar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="Relatório"
                    android:textColor="#fff"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.659" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="336dp"
            android:layout_height="76dp"
            android:layout_marginTop="64dp"
            android:text="Veja as ações do seu pequeno a partir do relatório!"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


        <ScrollView
            android:layout_width="467dp"
            android:layout_height="130dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.256">

                <LinearLayout
                    android:layout_width="467dp"
                    android:layout_height="130dp">
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Alfabeto"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Casa"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Comida"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>

                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Comunicação"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Corpo"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Diversão"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Dor"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Escola"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Família"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Número"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Roupas"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Sentidos"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:layout_width="114dp"
                            android:layout_height="130dp"
                            android:background="@drawable/button_relatorio"
                            android:gravity="center"
                            android:text="Sentimento"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"/>
                </LinearLayout>
        </ScrollView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="415dp"
            android:layout_height="84dp"
            android:background="@drawable/quadrado_verde_baixo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent">]
        </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
